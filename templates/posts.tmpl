<!DOCTYPE html>
<html lang="en">
    <head>
        {{ template "head" . }}
    </head>
    <body>
        {{ template "header" . }}

        <main>
            <p class="post-header">all posts</p>
            <ul class="post-list">
            {{ range .Site.Collections.Featured | where "Section" "posts" | sort "Date" "asc" }}
                <li class="post-item">
                    <span>{{ .Date.Format "2006-01-02" }}</span>
                    <a class="post-item" href="{{ .Canon }}">{{ .Title }}</a>
                </li>
            {{ end }}
            </ul>
            <a class="extra-link" href="/">[back]</a>
        </main>

        {{ template "footer" . }}
    </body>
</html>
